model User {
  id              String           @id @default(cuid())
  name            String?
  email           String           @unique
  password        String
  isAdmin         Boolean          @default(false)
  surveyResponses SurveyResponse[]
  passkeys        Passkey[]
}

model Passkey {
  id        String   @id @default(cuid())
  code      String   @unique
  createdBy String
  user      User     @relation(fields: [createdBy], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  expiresAt DateTime
  maxUses   Int      @default(999)
  uses      Int      @default(0)
}

model SurveyResponse {
  id             String   @id @default(cuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userType       String?  // personal or organization
  usedCRM        String?
  crmPurpose     String?
  interests      String?
  crmComfort     String?
  orgName        String?
  orgRole        String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Donor {
  id           String    @id @default(cuid())
  name         String
  email        String    @unique
  phone        String?
  totalDonated Int?
  status       String?
  createdAt    DateTime  @default(now())
  lastDonation DateTime?
  description  String?
}

model Campaign {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  goal        Int
  raised      Int
  startDate   DateTime
  endDate     DateTime
  status      String
  description String?
}

model SurveyQuestion {
  id          String   @id @default(cuid())
  question    String
  type        String   // text, select, multiselect, radio, checkbox, scale
  options     String?  // JSON string for select/radio/checkbox options
  required    Boolean  @default(false)
  order       Int      @default(0)
  category    String?  // e.g., "onboarding", "feedback", "demographics"
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
